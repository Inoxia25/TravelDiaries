<%- include ("../partials/header.ejs")%>

<div class="container">
<h1 style="text-align: center">
	Edit <%=campground.name%>
</h1>
	<div style="width: 30%; margin:30px auto;">
		<form action="/campgrounds/<%=campground._id%>?_method=PUT" method="POST">
			<div class="form-group">
				<label for="name">Name</label>
				<input type="text" value="<%=campground.name%>" name="name1" id="name" class="form-control">
			</div>
			<div class="form-group">
				<label for="imageurl">Image url</label>
				<input type="text" value="<%=campground.url%>" name="image" id="imageurl" class="form-control">
			</div>
	        <div class="form-group">
				<label for="des">Description</label>
				<input type="text" value="<%=campground.description%>" name="description" id="des"class="form-control">
			</div>
			<div class="form-group">
				<label for="price">Price per night</label>
				<input type="number" value="<%=campground.price%>" name="price" min="0" step="1" id="price" class="form-control">
			</div>
			<div class="form-group">
				<button class="btn btn-large btn-info btn-block">
		 Update!
	</button>
			</div>
			<a href="/campgrounds"> Go back!</a>
			
</form>	
	</div>

</div>

<%- include ("../partials/footer.ejs")%>