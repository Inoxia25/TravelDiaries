<%- include ("../partials/header.ejs")%>
<div class="container">
<h1 style="text-align: center">
 Edit Comment on <%=campground.name%>
</h1>
	<div style="width: 30%; margin:30px auto;">
		<form action="/campgrounds/<%=campground._id%>/comments/<%=foundComment._id%>?_method=PUT" method="POST">
			<div class="form-group">
				<label for="comment">Comment</label>
				<input type="text" value="<%=foundComment.text%>" name="text" id="comment" class="form-control">
			</div>
	        
			<div class="form-group">
				<button class="btn btn-large btn-info btn-block">
		 Update Comment!
	</button>
			</div>
			<a href="/campgrounds/<%=campground._id%>"> Go back!</a>
			
</form>	
	</div>

</div>

